citHeader("To cite pwrss in publications use:")
bibentry(bibtype = "Manual",
         title        = "{pwrss}: Statistical Power and Sample Size Calculation Tools",
         author       = c(as.person("Metin Bulus"), as.person("Sebastian Jentschke")),
         note         = "R package version 1.0.0",
         year         = "2025",
         url = "https://doi.org/10.32614/CRAN.package.pwrss",
         textVersion  =
           paste("Bulus, M., & Jentschke, S. (2025).",
                 "pwrss:  Statistical Power and Sample Size Calculation Tools.",
                 "R package version 1.0.0.",
                 "https://doi.org/10.32614/CRAN.package.pwrss"))
